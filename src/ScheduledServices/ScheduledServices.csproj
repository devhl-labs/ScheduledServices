<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <RepositoryUrl>https://github.com/devhl-labs/ScheduledServices</RepositoryUrl>
    <Authors>devhl</Authors>
    <Product />
    <Version>1.0.0</Version>
    <RepositoryType>git</RepositoryType>
    <Description>Add background services that can be scheduled to start some time after start up or recurring at regular intervals.</Description>
    <PackageProjectUrl>https://github.com/devhl-labs/ScheduledServices</PackageProjectUrl>
    <PackageTags>BackgroundService worker service hosted</PackageTags>
    <Copyright>2022</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
